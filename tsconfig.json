{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": false,
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.(test|spec).ts"
  ],
  "include": [
    "**/*.ts"
  ]
}